#include <stdio.h>
#include <stdlib.h>
#include <time.h>
#define N 100
typedef int Tab[N];

void remplirTableau(int  *t, int n)
{
    int i;
    srand(time(NULL)); //initialise le random
    for(i=0;i<n;i++)
    {
        t[i]=rand()%n; //t[i] reçoit une valeur aléatoire modulo n
    }
}

void recopie(int *t, Tab t2, int n)
{
    int i;
    for(i=0; i<n; i++)
    {
        t2[i]=t[i];
    }
}

void affichage(int *t, int n)
{
    int i;
    for(i=0;i<n;i++)
    {
        printf("%d\n",t[i]);
    }
}


void permute(int *t, int i,int j)
{
    int temp=t[i];
    t[i]=t[j];
    t[j]=temp;
}
void triSelection(int *t, int n)
{
    int i,j;
    for(i=0;i<n-1;i++)
    {
        for(j=i+1;j<n;j++)
        {
            if(t[i]>t[j])
            {
            permute(t,i,j);
            }
        }
    }
}
